{
  "scripts": {
    "build": "node build.js",
    "start": "npx live-server public",
    "watch": "nodemon --watch content --ext md --exec \"node build.js\"",
    "dev": "concurrently --kill-others-on-fail \"npm run watch\" \"npm start\"",
    "dev:all": "concurrently \"npm run watch\" \"npm start\""
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^17.0.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.11"
  }
}
